{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "pwm_left": {
            "type": "object",
            "properties": {
                "pwm_min": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                },
                "pwm_max": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                },
                "deadzone": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "additionalProperties": false
        },
        "pwm_right": {
            "type": "object",
            "properties": {
                "pwm_min": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                },
                "pwm_max": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                },
                "deadzone": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "additionalProperties": false
        },
        "safety_stop_timeout": {
            "type": "number",
            "minimum": 0.001
        }
    },
    "additionalProperties": false
}